{
  "name": "python-vuln-scanner",
  "displayName": "python-vuln-scanner",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "python-vuln-scanner.openSettings",
        "title": "Scanner Settings",
        "icon": "$(gear)"
      },
      {
        "command": "python-vuln-scanner.disable",
        "title": "Pause Scanner",
        "icon": "$(debug-stop)"
      },
      {
        "command": "python-vuln-scanner.enable",
        "title": "Start Scanner",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "python-vuln-scanner.enable",
          "when": "view == vuln-scanner-view && !pythonVulnScanner.enabled",
          "group": "navigation@1"
        },
        {
          "command": "python-vuln-scanner.disable",
          "when": "view == vuln-scanner-view && pythonVulnScanner.enabled",
          "group": "navigation@1"
        },
        {
          "command": "python-vuln-scanner.openSettings",
          "when": "view == vuln-scanner-view",
          "group": "navigation@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vuln-scanner-sidebar",
          "title": "Security Scanner",
          "icon": "media/shield.svg"
        }
      ]
    },
    "views": {
      "vuln-scanner-sidebar": [
        {
          "id": "vuln-scanner-view",
          "name": "Security Results"
        }
      ]
    },
    "configuration": {
      "title": "Python Security Scanner",
      "properties": {
        "pythonVulnScanner.analyzers.enableInjection": {
          "type": "boolean",
          "default": true,
          "description": "Enable A03: Injection Analysis",
          "scope": "resource"
        },
        "pythonVulnScanner.analyzers.enableAuth": {
          "type": "boolean",
          "default": true,
          "description": "Enable A07: Auth Failures Analysis",
          "scope": "resource"
        },
        "pythonVulnScanner.analyzers.enableLogging": {
          "type": "boolean",
          "default": true,
          "description": "Enable A09: Logging Failures Analysis",
          "scope": "resource"
        },
        "pythonVulnScanner.analyzers.enableDependencies": {
          "type": "boolean",
          "default": true,
          "description": "Enable A06: Vulnerable Components Analysis",
          "scope": "resource"
        },
        "pythonVulnScanner.engine.enableTaintAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable Deep Taint Analysis (Slower but more accurate)",
          "scope": "resource"
        },
        "pythonVulnScanner.analyzers.enableAccessControl": {
         "type": "boolean",
         "default": true,
         "description": "Enable A01: Broken Access Control Analysis",
         "scope": "resource"
       }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}